<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResumenDeListaPedidos">

    <TextView
        android:id="@+id/nombredelpedidonuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NombrePedido"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/nombrepizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombrePizza"/>
    <TextView
        android:id="@+id/cantidadPorciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cantidadPorciones"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bebida"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/nombreBebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombreBebida"/>

    <TextView
        android:id="@+id/preciototal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrecioTotal"
        android:textStyle="bold"
        android:textSize="25dp"
        />


</LinearLayout>